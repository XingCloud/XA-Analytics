
= simple_form_for @segment, :as => :segment, :url => @segment.new_record? ? project_segments_path(@project) : project_segment_path(@project,@segment), :html => {:class => "form-horizontal"} do |f|
  .page-header
    %h3
    一般信息
    %small 填写用户群目的，和用户群说明

  .form-stacked
    %fieldset
      %row-fluid
        .span12
          = f.input :name ,:required => true
          .03
            .dY
              .te
                .Ai#expressionlist
                  = render :partial=>'shared/template',:locals => {:segment => @segment}



  .form-actions
    = f.submit "提交", :class => "btn btn-primary"
    = link_to "取消", "javascript:void(0)", :class => "btn"

:javascript
  $(function(){
    $(".btn").click(function(){
      $("#segment_list").hide();
    })
  })