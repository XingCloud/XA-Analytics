- title "新建菜单"

= simple_form_for @menu, :as => :menu, :url=> project_menus_path(@project),:html => {:class => "form-horizontal"} do |f|
  .page-header
    .h3
      一般信息
      %small 菜单名称及描述
  .form-stocked

    %fieldset
      .row
        .span6
          = f.input :name
          .control-group.string.optional
            %label.string.optional.control-label 
              %div　报表
              %div.controls
                = select_tag :report_id, options_for_select(@report.map {|p| [ p.title, p.id ] }),{ :multiple => true, :size =>4, :id => "menu_report" }
          = f.input :desc
          = f.hidden_field(:project_id)

        .span7
          %h4
            菜单名称
          %p
            描述 报表可多选，最多选择四个报表
  .form-actions
    = f.submit "提交", :class => "btn btn-primary"
    = link_to "取消", project_menus_path(@project), :class => "btn"