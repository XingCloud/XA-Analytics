- title '分配权限'

= simple_form_for @user ,:as => :user ,:url=> assign_role_user_path,:html => {:class => 'form-horizontal'} do |f|

  .form-stocked

    .fieldset
      .row-fluid
        .span12
          = @user.login
          = f.input :id ,:as => :hidden
          .control-group
            %label.control-label
            .controls
              - @roles.each do |role|
                %label.checkbox.inline
                  =check_box_tag("role[]","#{role.id}",false)
                  = role.name

  .form-actions
    = f.submit "提交", :class => "btn btn-primary"
    = link_to "取消", users_path, :class => "btn"

:javascript
  $("form").submit(function(){
        var length = $("[type=checkbox]:checked").size();
        if (length <= 0){
          alert("必须选中一个角色.");
          return false;
        }else{
          return true;
        }
  });
