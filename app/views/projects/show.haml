      %h1 Chart
    .row-fluid
      %table.table.table-bordered
        %thead
          %tr
            %th date
            %th column
            %th column
            %th column
        %tbody
          %tr
            %td{:rowspan=>2} t
            %td Mark
            %td Otto
            %td mdo