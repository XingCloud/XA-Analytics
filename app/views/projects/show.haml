- stylesheet "menus"
.row-fluid
  .span3
    .well.sidebar-nav
      %h3 菜单
      #sortable
        = nested_list @project.menus.roots do |menu|
          - if menu.child?
            = link_to menu.name, project_menu_path(@project,menu)
          -else
            = "#{menu.name}"


  .span9
    .page-header
      %h1 自定义菜单
    %p
      = link_to "自定义菜单", project_menus_path(@project)
    
    
