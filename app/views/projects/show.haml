        %li.active
          = link_to '菜单排序', reorder_menus_path(:project_id=>@project.id)
        %li
          = link_to '新增菜单', new_menu_path(:project_id => @project.id)
        %li
          = link_to '菜单列表', menus_path(:project_id => @project.id)
  .span12
