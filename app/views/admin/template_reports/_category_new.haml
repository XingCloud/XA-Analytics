= form_for ReportCategory.new, :url => @project.nil? ? admin_template_report_categories_path() : project_report_categories_path(@project), :html => {:id => "category_new", :method => "post", :class => "modal", :style => "display: none;"} do |f|
  .modal-header
    %a.close{"data-dismiss" => "modal"} x
    %h3 新建分类
  .modal-body
    = f.label :name, "分类名称"
    = f.text_field :name
  .modal-footer
    = button_tag "取消", :class => "btn", :type => "button", :onclick => "$('#category_new').modal('hide')"
    = f.submit "保存", :class => "btn btn-primary"