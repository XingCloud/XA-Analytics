<div class="sign">
    <img src="/favicon.png">
    <h3>行云数据分析</h3>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div><%= f.email_field :email, :autofocus => true , :placeholder=>"email" %></div>

      <div> <%= f.password_field :password, :placeholder=>"passoword"%></div>

      <div><%= f.submit "Sign in" %></div>

      <!--<% if devise_mapping.rememberable? -%>-->
        <!--<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>-->
      <!--<% end -%>-->

    <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), :class=> "left" %>
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Sign up", new_registration_path(resource_name), :class => "right" %>
  <% end -%>

</div>