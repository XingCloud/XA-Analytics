.span2
  = render "projects/left_nav"
#block-container.span10
  .row-fluid#report-header
    #report-title.left
      %h3
        = @report.title
        &nbsp;
    .left.btn-group
      %a#segment-btn.btn
        %i.icon-user{:title => "用户群"}
      - if not @report.project_id.nil?
        %a.btn{:href => "#/reports/#{@report.id}/edit"}
          %i.icon-edit{:title => "编辑报告"}
      %a#refresh-btn.btn
        %i.icon-refresh{:title => "刷新"}

    #report-datepicker.right

  .row-fluid#report-tabs

    .te#segment_list{:style=>'display:none;'}
      =render :partial=>'segments/segments'

    %ul.nav.nav-tabs
      - @report.report_tabs.each do |tab|
        - if tab.id == @report_tab.id
          %li.active
            %a{:href => "#/reports/#{@report.id}/report_tabs/#{tab.id}"}
              = tab.title
        - else
          %li
            %a{:href => "#/reports/#{@report.id}/report_tabs/#{tab.id}"}
              = tab.title

  .row-fluid#rate-container
  .row-fluid#chart

%input#report_tab_id{:type => "hidden", :value => "#{@report_tab.id}"}

:javascript
  var report = reports_router.report(#{(@report.attributes).merge({:report_tab => @report_tab.js_attributes}).to_json});
:css
  .left{
    float: left;
  }
  .right{
    float: right;
  }

  #report-header{
    padding-bottom: 5px
  }

  #report-tabs{
    padding-top: 5px;
  }
