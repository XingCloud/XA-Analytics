!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : "XingCloud Analytic"
    
    = csrf_meta_tags
    
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    / Le styles
    = javascript_include_tag "#{BasisService.base_url}/xingcloud.js?project_id=#{@project.identifier}&select=analytic"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = stylesheet_link_tag "reports"
    = stylesheet_link_tag "segments"
    = yield :head
      
  %body
    #loader-message{:style => "display: none"}
      .progress.progress-striped.active
        .bar{:style => "width: 100%;"}
    #loading-message{:style => "display: none"} 载入中...
    .container-fluid
      .row-fluid
        .subnav
          %ul.nav.nav-pills
            %li.span2
              %a{:href => "#"} &nbsp;
            %li
              %a{:href => project_path(@project)}
                %i.icon-home
                首页
            %li
              %a{:href => "#/reports"}
                %i.icon-cog
                报告管理
        #container.row-fluid{:style => "padding-top: 10px;"}
          = yield

      
      %footer
        %p &copy; XingCloud 2012

    /
      Le javascript
      \==================================================
    / Placed at the end of the document so the pages load faster

:javascript
  var project = new Analytics.Models.Project(#{@project.attributes.to_json});
  Backbone.history.start();

:css
  body {
    padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
  }
