!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : t("application")
    = csrf_meta_tags

    = favicon_link_tag '/favicon.png', :type => 'image/png'
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//html5shim.googlecode.com/svn/trunk/html5.js"
    / Le styles
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.min.js"
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/jqueryui/1.10.0/jquery-ui.min.js"
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.2.2/bootstrap.min.js"
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/highcharts/2.3.5/highcharts.js"
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.3/underscore-min.js"
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/backbone.js/0.9.10/backbone-min.js"
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/chosen/0.9.11/chosen.jquery.min.js"
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/moment.js/1.7.2/moment.min.js"
    = javascript_include_tag "application"
    = stylesheet_link_tag    "application"

    - if Rails.application.assets.find_asset("locales/#{I18n.locale}").present?
      = javascript_include_tag "locales/#{I18n.locale}"
    = render :partial => "layouts/header", :locals => {:project => nil}
    = yield
    #loading-message{:style => "display: none"} 载入中...
