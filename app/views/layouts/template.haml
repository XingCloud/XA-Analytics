!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : t("application")
    = csrf_meta_tags

    = favicon_link_tag '/favicon.png', :type => 'image/png'
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//html5shim.googlecode.com/svn/trunk/html5.js"
    / Le styles
    = javascript_include_tag "//ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.min.js"
    = javascript_include_tag "//ajax.aspnetcdn.com/ajax/jquery.ui/1.10.0/jquery-ui.min.js"
    = javascript_include_tag "application"
    = stylesheet_link_tag    "application"

    - if Rails.application.assets.find_asset("locales/#{I18n.locale}").present?
      = javascript_include_tag "locales/#{I18n.locale}"
    = render :partial => "layouts/header", :locals => {:project => nil}
    = yield
