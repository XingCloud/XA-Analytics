    = javascript_include_tag "#{BasisService.base_url}/xingcloud.js?project_id=&select=analytic"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = stylesheet_link_tag "reports"
    = stylesheet_link_tag "segments"
    = yield :head

    .container-fluid
      #container.row-fluid
        = yield
    
