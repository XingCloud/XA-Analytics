<div class="row-fluid report-panel" data-spy="affix" data-offset-top="60">
    <div class="left btn-group">
        <% if not Instances.Models.user.is_mgriant():%>
        <a class="btn segment-btn"><i class="icon-user" title="<%= I18n.t('resources.segment') %>"/></a>
        <a class="btn" href="#/reports/<%= @id %>/edit">
            <i class="icon-edit" title="<%= I18n.t('commons.edit') %>"/>
        </a>
	<% end %>
        <a class="btn refresh-btn">
            <i class="icon-refresh" title="<%= I18n.t('commons.refresh') %>"/>
        </a>
    </div>
    <div class="left container-info">
        <span><i><%= I18n.t('templates.reports.show.timezone') %></i></span>
    </div>
    <div class="right report-tab-range-picker">
    </div>
</div>

<div class="row-fluid segments">
</div>
<div class="row-fluid report-tabs">
    <ul class="nav nav-tabs">
        <% for report_tab in @report_tabs_attributes: %>
            <% report_tab_model = Instances.Collections.report_tabs.get(report_tab.id) %>
            <% if @project_id?: %>
                <li class="<%= (if @report_tabs_attributes.indexOf(report_tab) == @report_tab_index then 'report-tab active' else 'report-tab')%>" value="<%= @report_tabs_attributes.indexOf(report_tab) %>"><a style="cursor: pointer;"><%= report_tab_model.get("title") %></a></li>
            <% else: %>
                <li class="<%= (if @report_tabs_attributes.indexOf(report_tab) == @report_tab_index then 'report-tab active' else 'report-tab')%>" value="<%= @report_tabs_attributes.indexOf(report_tab) %>"><a style="cursor: pointer;"><%= report_tab_model.get("title") %></a></li>
            <% end %>
        <% end %>
    </ul>
</div>
<div class="row-fluid tab-container"></div>
